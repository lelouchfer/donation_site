<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.teslus.donation.entities.CountryEntity</class>
        <class>com.teslus.donation.entities.DepartmentEntity</class>
        <class>com.teslus.donation.entities.DocumentEntity</class>
        <class>com.teslus.donation.entities.DonationEntity</class>
        <class>com.teslus.donation.entities.DonatorEntity</class>
        <class>com.teslus.donation.entities.InstitutionEntity</class>
        <class>com.teslus.donation.entities.RoleEntity</class>
        <class>com.teslus.donation.entities.UserEntity</class>
        <class>com.teslus.donation.entities.UserRoleEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/online_donation_site"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
